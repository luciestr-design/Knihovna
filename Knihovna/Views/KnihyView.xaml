<Window x:Class="Knihovna.Views.KnihyView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Knihovna.ViewModels"
        mc:Ignorable="d"
        Title="Správa knih" Height="500" Width="950"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:KnihyVM/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Right">
            <TextBlock Text="Filtr (Rok vydání):" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
            <TextBox Text="{Binding FiltrRok, UpdateSourceTrigger=PropertyChanged}" 
                     Width="120" Padding="5" VerticalContentAlignment="Center"/>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding KnihyView}" 
                  SelectedItem="{Binding SelectedKniha}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  BorderBrush="Black" BorderThickness="1"
                  RowHeight="25">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding KnihaId}" IsReadOnly="True" Width="40"/>

                <DataGridTextColumn Header="Název knihy" Binding="{Binding Nazev}" Width="2*"/>
                <DataGridTextColumn Header="Autor" Binding="{Binding Autor}" Width="1.5*"/>
                <DataGridTextColumn Header="Žánr" Binding="{Binding Zanr}" Width="*"/>
                <DataGridTextColumn Header="Rok" Binding="{Binding RokVydani}" Width="60"/>
                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="110"/>

                <DataGridTextColumn Header="Celkem kusů" Binding="{Binding CelkemKusu}" Width="100"/>
                <DataGridTextColumn Header="K dispozici" Binding="{Binding KusuKDispozici}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Content="+" Command="{Binding PridatCommand}" 
                        Width="50" Height="30" FontSize="20" FontWeight="Bold" Margin="0,0,5,0"
                        Background="#DDDDDD" BorderBrush="Black"/>
                <Button Content="-" Command="{Binding SmazatCommand}" 
                        Width="50" Height="30" FontSize="20" FontWeight="Bold"
                        Background="#DDDDDD" BorderBrush="Black"/>
            </StackPanel>

            <Button Grid.Column="2" Content="ULOŽIT ZMĚNY" Command="{Binding UlozitCommand}" 
                    Width="150" Height="30" FontWeight="Bold" FontSize="14"
                    Background="#DDDDDD" BorderBrush="Black"/>
        </Grid>
    </Grid>
</Window>
